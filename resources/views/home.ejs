<section class="hero">
  <div class="container mx-auto flex items-center justify-between">
      <div class="w-1/2">
        <h6 style="margin-left: 20px;" class="text-lg"><em>Vos Appareils sont disponibles !</em></h6>
        <h1 style="margin-left: 20px;" class="text-2xl md:text-4xl font-bold">N'attendez pas à passer vos commandes</h2>
        <button onclick="location.href='/menu';" style="margin-left: 20px; margin-top: 60px;" class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary ">Go   </button>
      </div>
      <div class="w-1/1">
        <img src="/img/iphone-13-pro-mockup.png" alt="iphone" width="800px">
      </div>
  </div>
</section>
<section class="menu container mx-auto py-8">
  <h1 class="text-xl font-bold mb-8 text-center" style="font-family: 'Segoe UI' ; font-size: 40px ; color: #658dfe; ">Toutes Les Technologies</h1> <br> <br>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16">
    <% appareils.forEach(function(appareil){ %>
      <div class="w-full md:w-64"> 
        <img class="h-40 mb-4 mx-auto" src="/img/<%= appareil.image %>"alt="">
        <div class="text-center">
          <h2 class="mb-4 text-lg"><%= appareil.productName %></h2>
          <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= appareil.description %></span>
          <div class="flex items-center justify-around mt-6">
            <span class="font-bold text-lg">€<%= appareil.price %></span>
            <button data-appareil="<%= JSON.stringify(appareil) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
              <span>+</span>
              <span>Ajoute</span>
            </button>
          </div>
        </div>
      </div>
    <% })%>
  </div>
</section>

<section style="margin-top: 100px;">
  <div class="slideshow-container">
    <div class="mySlides fade">
      <div class="numbertext">1 / 3</div>
      <img src="/img/slide-1.jpg" style="width:100%; height: 450px; border-radius: 100px;">
    </div>
    
    <div class="mySlides fade">
      <div class="numbertext">2 / 3</div>
      <img src="/img/slide-2.jpg" style="width:100%; height: 450px; border-radius: 100px;">
    </div>
    
    <div class="mySlides fade">
      <div class="numbertext">3 / 3</div>
      <img src="/img/slide-3.png" style="width:100% ; height: 450px; border-radius: 100px;">
    </div>
    
    <a class="prev" onclick="plusSlides(-1)">❮</a>
    <a class="next" onclick="plusSlides(1)">❯</a>
    
    </div>
    <br>
    
    <div style="text-align:center">
      <span class="dot" onclick="currentSlide(1)"></span> 
      <span class="dot" onclick="currentSlide(2)"></span> 
      <span class="dot" onclick="currentSlide(3)"></span> 
    </div>
</section>